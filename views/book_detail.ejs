<a href="/catalog">Home</a>
<h1>Title: <%=book.title%></h1>
<p>Author:<a href=<%- book.author.url%>> <%- book.author.name%> </a></p>
<p>Summary: <%=book.summary%></p>
<p>ISBN: <%=book.isbn%></p>
<p>Genre: %>
    <% book.genre.forEach((val) => { %>
         <a href=<%- val.url %> ><%- val.name %></a>
    <% })%>
</p>
<div>
    <h4>Copies</h4>
    <ul> <% book_instances.forEach((val)=> { %>
        <li>
            <% if(val.status=='Available') {%>
                <p><%- val.status %></p>
                <% } else if(val.status=='Maintenance') { %>
                    <p><%- val.status %></p>
                    <% } else { %>
                        <p><%- val.status %></p> 
                        
                        <% } %>
                        <p>Imprint: <%- val.imprint %></p>
                        <p>ID: <a href=<%- val.url%> ><%- val._id %></a></p>
            <% if(val.status!='Available') {%>
                <p>Due: <%- val.due_back_formatted %></p> 
                <% }  else { %>
                    <p>There are no copies available.</p>
                    <% } %>
        </li>
        <% }); %>
    </ul>
</div>