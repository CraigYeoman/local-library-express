<a href="/catalog">Home</a>
<h1><%= title %>: <%- author.name %></h1>
<p><%- author.lifespan%></p>
<% if(author_books.length) { %>
    <p>Delete the following books before attempting to delete this author.</p>
    
<div>
    <h4>Books</h4>
    <dl>
        <% author_books.forEach((book)=> { %>
            <dt>
                <a href=<%-book.url %>><%-book.title %></a>
            </dt>
            <dd><%-book.summary%></dd>
       <% }) %>
    </dl>
</div>
<% } else { %>
<p>Do you really want to delete this Author?</p>
<% } %>

<form action="" method="post">
    <div>
        <input type="hidden" name="authorid" required="true" value=<%-author._id %>>
    </div>
</form>
<button type="submit">Delete</button>
